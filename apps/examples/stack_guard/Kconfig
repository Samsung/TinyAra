menuconfig EXAMPLES_STACKGUARD_TEST
	bool "Stack Guard TestCase Examples"
	depends on MPU_STACKGUARD
	---help---
		Enable the TestCase to test the stack guard feature.
		This feature enables the hardware enabled stack guard.

if EXAMPLES_STACKGUARD_TEST

config TC_SG_RECURSION_TEST
	bool "Recursive call Test for Stack guard feature"
	default n

endif #EXAMPLES_STACKGUARD_TEST

config USER_ENTRYPOINT
	string
	default "sg_tc_main" if ENTRY_STACKGUARD_TEST
